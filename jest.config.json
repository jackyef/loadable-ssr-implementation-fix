{
	"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js"
	],
	"moduleDirectories": [
		"node_modules",
		"src"
	],
	"setupFiles": [
		"raf/polyfill",
		"<rootDir>/jest_setup/jestsetup.js"
	],
	"snapshotSerializers": [
		"enzyme-to-json/serializer"
	],
	"testPathIgnorePatterns": [
		"<rootDir>/node_modules/"
	],
	"transform": {
		"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
		".+\\.(css|styl|less|sass|scss)$": "<rootDir>/node_modules/jest-css-modules-transform",
		"\\.js$": "babel-jest",
		"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest_setup/fileTransformer.js"
	},

	"moduleNameMapper": {
		"mobx": "<rootDir>/node_modules/mobx"
	},

	"coverageReporters": [
		"html", "text"
	],

	"globals": {
		"ts-jest": {
			"tsConfigFile": "./client/tsconfig.json"
		}
	}
}
