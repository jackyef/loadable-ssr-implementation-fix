{
	"extends": "@tg/configs/tsconfig/app.json",
	"compilerOptions": {
		"baseUrl": "./"
	},

	"include": [

		// App
		"src/**/*",

		// Linked modules
		"node_modules/@scc",
		"node_modules/@tg"
	],

	"exclude": [

		// App
		"__tests__/**/*",
		"bundle_*/**/*",
		"coverage/**/*",
		"jest_setup/**/*",
		"resources/**/*",

		// Linked modules tests
		"**/_tests/**/*",
		"**/_stories/**/*"
	]
}
