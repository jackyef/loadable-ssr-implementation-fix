{
	"extends": "@tg/configs/tsconfig/app.json",
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react",
		"declaration": false,
		"esModuleInterop": true,
		"paths": {
			"app/config/*": ["src/config/*"],
			"app/config": ["src/config/index.ts"],
			"app/stores/*": ["src/stores/*"],
			"app/stores": ["src/stores/index.ts"],
			"app/routes/*": ["src/routes/*"],
			"app/routes": ["src/routes/index.tsx"],
			"app/components/*": ["src/components/*"],
			"app/components": ["src/components/index.ts"],
			"*": [
				"node_modules/@types/*",
				"typings/*",
				"*"
			]
		}
	},

	"include": [

		// App
		"src/**/*",

		// Linked modules
		"node_modules/@tg"
	],

	"exclude": [

		// App
		"__tests__/**/*",
		"bundle_*/**/*",
		"coverage/**/*",
		"jest_setup/**/*",
		"resources/**/*",

		// Linked modules tests
		"**/_tests/**/*",
		"**/_stories/**/*"
	]
}
